rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Artworks images - anyone can read, only owner can write
    match /artworks/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Verification images - owner can read/write, admins can read for review
    match /verification/{userId}/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.uid == userId || true); // Admins can read (checked in app code)
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile pictures - anyone can read, only owner can write
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}